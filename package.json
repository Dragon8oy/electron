{
  "name": "mollusc-text-editor",
  "productName": "Mollusc Text Editor",
  "description": "An Electron based text editor",
  "keywords": ["electron", "text", "editor"],
  "main": "./main.js",
  "version": "0.4.0",
  "license": "GPL-3.0",
  "homepage": "https://github.com/Dragon8oy/mollusc-text-editor",
  "author": {
    "name": "Stuart Hayhurst",
    "email": "stuart.a.hayhurst@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Dragon8oy/mollusc-text-editor.git"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "files": [
      "**/*",
      "assets/css/stylesheet.css",
      "assets/img/*",
      "assets/js/*",
      "build/icons/*",
      "build/icon.*"
    ],
    "icon": "256x256",
    "win": {
      "target": "NSIS"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^7.2.4",
    "electron-builder": "^20.44.4"
  }
}
