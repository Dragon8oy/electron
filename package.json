{
  "name": "mollusc-text-editor",
  "productName": "Mollusc Text Editor",
  "description": "An Electron based text editor",
  "keywords": [],
  "main": "./main.js",
  "version": "0.3.8",
  "license" : "GPL-3.0",
  "homepage": "https://dragon8oy.github.io/electron",
  "author": {
    "name": "dragon8oy",
    "email": "stuart.a.hayhurst@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dragon8oy/electron.git"
  },
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "files": [
      "**/*",
      "assets/css/stylesheet.css",
      "assets/img/*",
      "assets/menu/menu.js"
    ],
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    },
    "linux": {
      "icon": "build/icons/512x512.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
  },
  "devDependencies": {
    "electron": "^4.0.5",
    "electron-builder": "^20.38.5"
  }
}
